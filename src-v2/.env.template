# aiMate Environment Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
APP_NAME=aiMate
APP_VERSION=2.0.0
ENVIRONMENT=Production

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL with pgvector)
# =============================================================================
POSTGRES_DB=aimate
POSTGRES_USER=aimate
POSTGRES_PASSWORD=change_me_in_production_STRONG_PASSWORD_HERE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (Caching & Session Storage)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# LITELLM CONFIGURATION (AI Gateway)
# =============================================================================
# LiteLLM is the AI gateway for multi-provider support
LITELLM_MASTER_KEY=sk-litellm-master-key-change-me
LITELLM_PORT=4000

# LiteLLM Provider API Keys
# Add your API keys for the providers you want to use
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
TOGETHER_API_KEY=
COHERE_API_KEY=

# =============================================================================
# AIMATE WEB APPLICATION
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000
WEB_PORT_HTTP=5000
WEB_PORT_HTTPS=5001

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=change_me_to_random_64_char_string_for_production
JWT_ISSUER=aiMate
JWT_AUDIENCE=aiMate
JWT_EXPIRY_HOURS=24

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=.txt,.md,.pdf,.docx,.xlsx,.csv,.json,.xml

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_DEVELOPER_API=true
ENABLE_PUBLIC_REGISTRATION=true
ENABLE_CODEMATE=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=Information
SERILOG_MIN_LEVEL=Information

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=Pacific/Auckland

# =============================================================================
# OPTIONAL: IN-MEMORY DATABASE (for quick testing without PostgreSQL)
# =============================================================================
# Set to "true" to use in-memory database instead of PostgreSQL
# WARNING: All data will be lost when the app restarts!
USE_IN_MEMORY_DATABASE=false
