@* Top bar with workspace switcher, model selector and actions *@

<MudAppBar Elevation="0" Dense="true" Style="background-color: #1A1A1A; border-bottom: 1px solid #2A2A2A;">
    <WorkspaceSwitcher />

    <MudSpacer />

    <MudMenu Icon="@Icons.Material.Filled.SmartToy"
             Color="Color.Inherit"
             AnchorOrigin="Origin.BottomCenter"
             TransformOrigin="Origin.TopCenter">
        <ActivatorContent>
            <MudButton Color="Color.Inherit"
                      StartIcon="@Icons.Material.Filled.SmartToy"
                      EndIcon="@Icons.Material.Filled.KeyboardArrowDown">
                @_selectedModel
            </MudButton>
        </ActivatorContent>
        <ChildContent>
            <MudMenuItem OnClick="@(() => _selectedModel = "GPT-4")">GPT-4</MudMenuItem>
            <MudMenuItem OnClick="@(() => _selectedModel = "GPT-3.5 Turbo")">GPT-3.5 Turbo</MudMenuItem>
            <MudMenuItem OnClick="@(() => _selectedModel = "Claude 3.5 Sonnet")">Claude 3.5 Sonnet</MudMenuItem>
            <MudMenuItem OnClick="@(() => _selectedModel = "Claude 3 Opus")">Claude 3 Opus</MudMenuItem>
            <MudMenuItem OnClick="@(() => _selectedModel = "Gemini Pro")">Gemini Pro</MudMenuItem>
        </ChildContent>
    </MudMenu>

    <MudIconButton Icon="@Icons.Material.Filled.Settings"
                   Color="Color.Inherit"
                   Edge="Edge.End"
                   Href="/settings" />
</MudAppBar>

@code {
    private string _selectedModel = "GPT-4";
}
